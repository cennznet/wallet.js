{
    "name": "root",
    "private": true,
    "engines": {
        "node": ">=10.13.0",
        "yarn": "^1.12.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "plugnet-dev-build-ts",
        "test": "jest -c ./jest/jest.config.js --coverage spec",
        "test:e2e": "jest --forceExit --runInBand -c ./jest/jest.config.js e2e",
        "make-docs": "rm -rf api_docs && typedoc --options typedoc.config.js .",
        "metadata-docs": "node ./scripts/MetadataMdWrapper.js",
        "lint": "npx tslint -c tslint.json --project . && npx prettier --list-different './packages/**/src/*.ts'"
    },
    "devDependencies": {
        "@plugnet/dev": "^0.30.5",
        "@types/jest": "^24.0.15",
        "cz-lerna-changelog": "^2.0.2",
        "husky": "^2.7.0",
        "jest": "24.8.0",
        "jest-environment-node": "^24.0.0",
        "lerna": "^3.13.1",
        "prettier": "^1.13.5",
        "pretty-quick": "^1.11.1",
        "tslint": "^5.14.0",
        "tslint-microsoft-contrib": "^6.2.0"
    },
    "resolutions": {
        "braces": "^2.3.2",
        "fstream": "^1.0.12",
        "handlebars": "^4.1.2",
        "js-yaml": "^3.13.1",
        "marked": "^0.6.2",
        "tar": "^4.4.8"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --pattern 'packages/**/src/**/*' && npx tslint -c tslint.json --project ."
        }
    }
}
